{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": 
  [
    "plugin:mocha/recommended",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": [
      "error",
      { 
        "args": "none"
      }
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
